<%- include("./layout/header")%>
    <div class="page-body">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-block">
                        <h4 class="sub-title">Salata Ekleme Bölümü</h4>
                        <br />
                        <form method="POST" action="/admin/salads/salataekle" enctype="multipart/form-data">

                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Salata Adı</label>
                                <div class="col-sm-10">
                                    <input type="text" name="salads_title" class="form-control"
                                        placeholder="Salata Adı" />
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Salata Tarifi</label>
                                <div class="col-sm-10">
                                    <textarea  type="text" name="salads_description" class="form-control"
                                        placeholder="Salata Tarifi"></textarea>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Malzemeler </label>
                                <div class="col-sm-10">
                                    <input type="text" name="salads_materials" class="form-control"
                                        placeholder="Malzemeler" />
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Fotoğraf Seç</label>
                                <div class="col-sm-10">
                                    <input type="file" name="file" class="form-control" />
                                </div>
                            </div> 

                            <button class="btn btn-outline-success" type="submit">
                                EKLE !
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%- include("./layout/footer") %>