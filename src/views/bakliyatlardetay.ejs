<%-include("layout/header") %>

    <section class="single-post spad">
        <div class="single-post__hero set-bg" data-setbg="/admin/demos/<%- data.bakliyatlar.bakliyatlar_photo %>">
        </div>
        <div class="container">
            <div class="row d-flex justify-content-center">
                <div class="col-lg-8">
                    <div class="single-post__title">
                        <div class="single-post__title__text">
                            <ul class="label">
                                <li>Ana Yemek</li>
                                <li>Bakliyatlar</li>
                            </ul>
                            <h4><%- data.bakliyatlar.bakliyatlar_title %></h4>
                        </div>
                    </div>
                    <div class="single-post__social__item">
                        <ul>
                            <li><a href="#"><i class="fa fa-facebook"></i></a></li>
                            <li><a href="#"><i class="fa fa-twitter"></i></a></li>
                            <li><a href="#"><i class="fa fa-instagram"></i></a></li>
                            <li><a href="#"><i class="fa fa-youtube-play"></i></a></li>
                        </ul>
                    </div>
                    <div class="single-post__top__text">
                    </div>
                    <div class="single-post__recipe__details">
                        <div class="single-post__recipe__details__option  ">
                            <ul>
                                <form action="/bakliyatdetay/<%=data.bakliyatlar._id%>" method="POST">
                                    <button type="submit" class="primary-btn">
                                     <i class="fa fa-print"></i> Listeme Ekle
                                    </button>
                            </form>
                            </ul>
                        </div>
                        <div class="single-post__recipe__details__indegradients">
                            <h5>Malzemeler</h5>
                            <ul>
                                <% data.bakliyatlar.bakliyatlar_materials.forEach(element=> { %>
                                    <li><%-element %></li>
                                    <% }) %>
                            </ul>
                        </div>
                        <div class="single-post__recipe__details__direction">
                            <h5>Hazırlanışı</h5>
                            <ul>
                                <% counter=1; %>
                                    <% data.bakliyatlar.bakliyatlar_description.forEach(element=> { %>
                                        <li><span> <%-counter %> </span> <%-element %> </li>
                                        <% counter++; }) %>
                            </ul>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </section>
    <!-- Single Post Section End -->

    <%-include("layout/footer") %>