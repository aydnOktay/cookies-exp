<%-include("layout/header") %>
    <section class="about spad">
        <div class="container">
            <div class="about__text">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="breadcrumb__text">
                            <h2>Profil / <%=data.user.fullName%></h2>
                            <div class="breadcrumb__option">
                                <a href="/">Anasayfa</a>
                                <span>Profil</span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <h4><b>Alışveriş Listem</b></h4>
                        <hr>
                    </div>
                
                    <% if(data.user && data.user.cart.length > 0) { %>
                        <% data.user.cart.forEach((cart) => { %>
                            <div class="col-lg-4">
                                <div class="about__right__text">
                                    <div class="sidebar__item__categories">
                                        <div class="sidebar__item">
                                            <h4><%= cart.name %></h4>
                                            <ul>
                                                <% cart.datas.forEach((cartItem) => { %>
                                                    <li><%= cartItem %></li>
                                                <% }) %>
                                            </ul>
                                            <form method="POST" action="/cart/delete/<%= cart.name %>">
                                                <button type="submit" class="btn btn-danger btn-sm">Kaldır</button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% }) %>
                    <% } %>
                </div>
                
            </div>
        </div>
    </section>

    <%-include("layout/footer") %>