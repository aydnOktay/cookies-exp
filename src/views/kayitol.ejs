<%-include("layout/header") %>
    <div class="signin">
        <div class="signin__warp">
            <div class="signin__content">
                <div class="signin__logo">
                    <a href="#"><img src="/img/logo.jpg" alt=""></a>
                </div>
                <div class="signin__form">
                    <ul class="nav nav-tabs" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" data-toggle="tab" href="#tabs-1" role="tab"
                                aria-selected="false">
                                  Kayıt Ol
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="tab" href="#tabs-2" role="tab" aria-selected="false">
                                Giriş Yap
                            </a>
                        </li>

                    </ul>
                    <div class="tab-content">
                        <% if(error !== null) {%>
                        
                        
                        <div class="alert alert-danger alert-dismissible fade show justify-content-center d-flex text-center" role="alert">
                            <div>
                                <%=error %>

                            </div>
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">
                                    x
                                </span>
                            </button>
                        </div>
                        <%}%>
                        <div class="tab-pane active" id="tabs-1" role="tabpanel">
                            <div class="signin__form__text">
                                <!-- Burada alan adını değiştirmeden nasıl post atarım ? -->
                                <form action="/admin/users/" method="POST">
                                    <input type="text" name="fullName" placeholder="İsim Soyisim" required>
                                    <input type="password" name="password" placeholder="Şifre" required>
                                    <input type="password" name="rpassword" placeholder="Tekrar Şifre" required>
                                    <input type="email" name="email" placeholder="Email">
                                    <button type="submit" class="site-btn">Kayıt Ol</button>
                                </form>
                            </div>
                        </div>
                        <div class="tab-pane" id="tabs-2" role="tabpanel">
                            <div class="signin__form__text">
                                <form action="/admin/users/girisyap" method="POST">
                                    <input type="email" name="email" placeholder="Email Adresi">
                                    <input type="password" name="password" placeholder="Şifre">
                                    <!-- <button class="nav-link site-btn" data-toggle="tab" href="#tabs-3" role="tab"
                                        aria-selected="false">Şifremi Unuttum</button> -->
                                    <button type="submit" class="site-btn">Giriş Yap</button>
                                </form>
                            </div>
                        </div>
                        <div class="tab-pane" id="tabs-3" role="tabpanel">
                            <div class="signin__form__text">
                                <form action="/admin/users/sifremiunuttum" method="POST">
                                    <input type="email" name="email" placeholder="Email Adresi">
                                    <button type="submit" class="site-btn">Gönder</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%-include("layout/footer") %>